@{
    ViewData["Title"] = "Create";
}
@model Product
<div class="p-2">
    <a asp-controller="Product" asp-action="Index">
        <button type="button" class="btn btn-primary">Go Back</button>
    </a>
</div>

<div class="p-2"> 
    <form asp-controller="Product" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name:</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group"> 
            <label asp-for="Description" class="form-label">Description:</label>
            <span asp-validation-for="Description" class="text-danger"></span>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="form-label">Price</label>
            <span asp-validation-for="Price" class="text-danger"></span>
            <input asp-for="Price" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Category" class="form-label">Category:</label>
            <span asp-validation-for="Category" class="text-danger"></span>
            <input asp-for="Category" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Image" class="form-label">Image URL:</label>
            <span asp-validation-for="Image" class="text-danger"></span>
            <input asp-for="Image" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="SKU" class="form-label">SKU:</label>
            <span asp-validation-for="SKU" class="text-danger"></span>
            <input asp-for="SKU" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Brand" class="form-label">Brand:</label>
            <span asp-validation-for="Brand" class="text-danger"></span>
            <input asp-for="Brand" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="IsAvailable" class="form-label">Is Available:</label>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
            <div class="form-check">
                <input type="radio" asp-for="IsAvailable" class="form-check-input" value="true" id="IsAvailableYes" checked>
                <label class="form-check-label" for="IsAvailableYes">Yes</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="IsAvailable" class="form-check-input" value="false" id="IsAvailableNo">
                <label class="form-check-label" for="IsAvailableNo">No</label>
            </div>
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>