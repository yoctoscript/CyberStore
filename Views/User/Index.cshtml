@{
    ViewData["Title"] = "Users";
}
@model IEnumerable<UserInfo>

<div class="p-2">
    <a asp-controller="User" asp-action="Create">
        <button type="button" class="btn btn-success">Create User</button>
    </a>
</div>

<div class="p-2">
    <table class="table table-bordered table-hover">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles.ToArray<string>())</td>
                <td>
                    <a asp-controller="User" asp-action="Read" asp-route-id="@user.Id">
                        <button type="button" class="btn btn-secondary">View</button>
                    </a>
                </td>
                <td><button type="button" class="btn btn-warning">Edit</button></td>
                <td><button type="button" class="btn btn-danger">Delete</button></td>
            </tr>
        }
    </table>
</div>